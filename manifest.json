{
    "name": "GameScore",
    "description": "Get Game Score when browsing EBGAMES website",
    "version": "1.0",
    "manifest_version": 3,
    "background": {       
        "service_worker": "background.js"
    },      
    "action":{
        "default_popup":"popup.html"

    },

    "icons":  {
      "16": "icons/b16.png",
      "48": "icons/b48.png",
      "128": "icons/b128.png"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"]
      }
    ],

    "declarative_net_request" : {
      "rule_resources" : [
          {
          "id": "ruleset_1",
          "enabled": true,
          "path": "ruleset_1.json"
        }
      ]
    },
    "permissions": [
      "tabs",
      "webNavigation",
      "activeTab",
      "scripting",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
      
      "https://www.ebgames.com.au/*"
      
    ]

   

}