{
    "name": "Ebgames Companion",
    "description": "This extension will show the user score and review(from Metacritic) of any game on Ebgames.com.au, which help gamers choose games.",
    "version": "1.0.0",
    "manifest_version": 3,
    
    "background": {       
        "service_worker": "background.js"
    },      

    "action":{
        "default_popup":"popup.html"

    },


    "icons":  {
      "16": "icons/b16.png",
      "48": "icons/b48.png",
      "128": "icons/b128.png"
    },

    "content_scripts": [
      {
        "matches": ["https://www.ebgames.com.au/product/*"], 
        
        "js": ["content.js"]
      }
    ],

    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      
      "https://www.ebgames.com.au/product/*",
      "https://www.Metacritic.com/*"
    ]
}