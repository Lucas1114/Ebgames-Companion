{
    "name": "GameScore",
    "description": "Get Game Score when browsing EBGAMES website",
    "version": "1.0",
    "manifest_version": 3,
    "background": {       
        "service_worker": "background.js"
    },      
    "action":{
        "default_popup":"popup.html"
    },

    

    "declarative_net_request" : {
      "rule_resources" : [
          {
          "id": "ruleset_1",
          "enabled": true,
          "path": "ruleset_1.json"
        }
      ]
    },
    "permissions": [
      "activeTab",
      "scripting",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
      "http://www.blogger.com/*",
      "http://*.google.com/*",
      "https://www.metacritic.com/"
    ]

   

}