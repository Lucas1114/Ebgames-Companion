{
    "name": "GameScore",
    "description": "Get Game Score when browsing EBGAMES website",
    "version": "1.0",
    "manifest_version": 3,
    "background": {       
        "service_worker": "background.js"
    },      
    "action":{
        "default_popup":"popup.html",
        "default_icon": "icons/111.png"
         
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"]
      }
    ],

    "declarative_net_request" : {
      "rule_resources" : [
          {
          "id": "ruleset_1",
          "enabled": true,
          "path": "ruleset_1.json"
        }
      ]
    },
    "permissions": [
      "tabs",
      "webNavigation",
      "activeTab",
      "scripting",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
      "http://www.blogger.com/*",
      "http://*.google.com/*",
      "https://www.ebgames.com.au/*",
      "https://www.metacritic.com/"
    ]

   

}